{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": { "enabled": true, "indentWidth": 2, "lineWidth": 100 },
	"linter": { "enabled": true, "rules": { "recommended": true } },
	"javascript": { "formatter": { "quoteStyle": "single" } },
	"files": {
		"ignore": [
			"**/.next/**",
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/.turbo/**",
			"**/coverage/**"
		]
	}
}
