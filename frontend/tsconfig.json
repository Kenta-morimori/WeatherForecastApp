{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"app",
		"app/**/*.ts",
		"app/**/*.tsx",
		"src",
		"src/**/*.ts",
		"src/**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
